# Ficheiro de exemplo de variáveis de ambiente para o Oasis Trading System
# Copie este ficheiro para .env e preencha com os seus valores locais.
# NUNCA comite o seu ficheiro .env!

# --- Dependências Externas ---
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC=market-data.trades.normalized
RAW_MARKET_TOPIC=market-data.trades.coinbase
NORMALIZED_MARKET_TOPIC=market-data.trades.normalized
CONTROL_COMMAND_TOPIC=control.commands
REDIS_ADDR=redis://127.0.0.1/

# --- Coinbase Connector (Rust) ---
COINBASE_WS_URL=wss://ws-feed.exchange.coinbase.com
CONNECTOR_METRICS_PORT=9091

# --- Strategy Framework (Python) ---
STRATEGY_METRICS_PORT=9092
MARKET_DATA_TOPIC=market-data.trades.coinbase
STRATEGY_CONSUMER_GROUP=strategy-framework-group
SYMBOL=BTC-USD

# --- Risk Engine (Rust) ---
RISK_ENGINE_GRPC_ADDR=[::1]:50051
RISK_METRICS_PORT=9093

# --- Order Manager (Go) ---
ORDER_MANAGER_GRPC_ADDR=[::1]:50052
ORDER_MANAGER_MODE=paper  # valores: paper|real
COINBASE_API_BASE_URL=https://api.exchange.coinbase.com  # ajuste conforme API vigente
ORDER_MANAGER_COINBASE_VARIANT=advanced_trade   # advanced_trade|exchange
ORDER_MANAGER_COINBASE_ENV=prod                 # prod|sandbox
ORDER_MANAGER_METRICS_PORT=9094

# --- Control Center API (Go) ---
CONTROL_CENTER_API_PORT=8080
CONTROL_CENTER_API_USER=admin
CONTROL_CENTER_API_PASSWORD=changeme
JWT_SECRET=dev-secret
DATABASE_URL=postgres://postgres:postgres@localhost:5432/oasis
CONTROL_CENTER_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# --- Control Center Frontend (Next.js) ---
NEXT_PUBLIC_API_BASE_URL=http://localhost:8080

# --- CREDENCIAIS DE PRODUÇÃO (NUNCA COMITAR!) ---
COINBASE_API_KEY=YOUR_API_KEY_HERE
COINBASE_API_SECRET=YOUR_API_SECRET_HERE
COINBASE_API_PASSPHRASE=YOUR_PASSPHRASE_HERE
